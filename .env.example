# Copy this file to .env and set values as needed

# SQL Server host and port (port optional if default 1433)
MSSQL_SERVER=us11dw3wfrntd01.na.didata.local,1533

# Database name
MSSQL_DATABASE=SAP

# Authentication: windows | sql
MSSQL_AUTH=windows

# Only used when MSSQL_AUTH=sql
MSSQL_USERNAME=
MSSQL_PASSWORD=

# ODBC driver preference. Leave blank to auto-detect.
# Examples: ODBC Driver 18 for SQL Server | ODBC Driver 17 for SQL Server
MSSQL_ODBC_DRIVER=

# TLS settings (ODBC 18 defaults to Encrypt=yes)
MSSQL_ENCRYPT=yes
MSSQL_TRUST_CERT=yes

# Connection timeout in seconds
MSSQL_TIMEOUT=30
